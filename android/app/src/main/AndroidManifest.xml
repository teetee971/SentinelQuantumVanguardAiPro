<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for WebView -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Optional permissions (declared but not requested by default) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".SentinelApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SentinelQuantumVanguard"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- V1 Native Activity Screens -->
        <activity
            android:name=".activities.PhoneSecurityActivity"
            android:label="Sécurité Téléphone"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.SocMobileActivity"
            android:label="SOC Mobile"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.SystemStatusActivity"
            android:label="Statut Système"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.TransparencyActivity"
            android:label="Transparence RGPD"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <!-- V1.5 Phone & Contacts Features -->
        <activity
            android:name=".activities.DialerActivity"
            android:label="Téléphone Sécurisé"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <!-- Support for default dialer app (API 29+) -->
            <intent-filter>
                <action android:name="android.intent.action.DIAL"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
            
        <activity
            android:name=".activities.ContactsActivity"
            android:label="Contacts Sécurisés"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.SmsSecurityActivity"
            android:label="Sécurité SMS"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".activities.PermissionsManagerActivity"
            android:label="Gestion Permissions"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>
