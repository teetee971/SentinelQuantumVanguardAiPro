<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sentinel.quantum">

    <!-- ===================== -->
    <!-- PERMISSIONS ESSENTIELLES -->
    <!-- ===================== -->

    <!-- Accès état réseau (audit, SOC local) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Accès Internet (Threat Intel passif, mises à jour règles) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Vérification intégrité système -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!-- Lecture/écriture stockage pour rapports de sécurité -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage"/>

    <!-- Android 13+ permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"/>

    <!-- Notifications sécurité -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Accès WiFi pour analyse sécurité réseau -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Démarrage au boot (service audit) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Service foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>

    <!-- Vibration pour alertes -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- ===================== -->
    <!-- FEATURES -->
    <!-- ===================== -->

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false"/>

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false"/>

    <uses-feature
        android:name="android.hardware.location"
        android:required="false"/>

    <!-- ===================== -->
    <!-- APPLICATION -->
    <!-- ===================== -->

    <application
        android:name=".SentinelApp"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:usesCleartextTraffic="false"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SentinelQuantum"
        android:hardwareAccelerated="true"
        android:largeHeap="false"
        tools:targetApi="31">

        <!-- ===================== -->
        <!-- ACTIVITÉS -->
        <!-- ===================== -->

        <!-- Écran principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- Deep links -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="sentinel"/>
                <data android:host="security"/>
            </intent-filter>

        </activity>

        <!-- Dashboard sécurité -->
        <activity
            android:name=".ui.SecurityDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>

        <!-- Rapport détaillé -->
        <activity
            android:name=".ui.SecurityReportActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.SecurityDashboardActivity"/>

        <!-- ===================== -->
        <!-- SERVICES -->
        <!-- ===================== -->

        <!-- Service d'audit passif en arrière-plan -->
        <service
            android:name=".services.SecurityAuditService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="dataSync"
            android:stopWithTask="false">
            <meta-data
                android:name="com.sentinel.service.type"
                android:value="security_audit"/>
        </service>

        <!-- ===================== -->
        <!-- RECEIVERS -->
        <!-- ===================== -->

        <!-- Démarrage contrôlé au boot -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- Receiver pour alertes sécurité -->
        <receiver
            android:name=".receivers.SecurityAlertReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.sentinel.quantum.SECURITY_ALERT"/>
            </intent-filter>
        </receiver>

        <!-- ===================== -->
        <!-- CONTENT PROVIDERS -->
        <!-- ===================== -->

        <!-- Provider pour partage sécurisé de rapports -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <!-- ===================== -->
        <!-- METADATA -->
        <!-- ===================== -->

        <!-- Désactiver Google Analytics (privacy) -->
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false"/>

        <meta-data
            android:name="google_analytics_ssaid_collection_enabled"
            android:value="false"/>

        <!-- Version de l'app -->
        <meta-data
            android:name="com.sentinel.version"
            android:value="1.0.0"/>

        <!-- Mode sécurisé -->
        <meta-data
            android:name="com.sentinel.security_mode"
            android:value="production"/>

    </application>

</manifest>
