<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <!-- INSTITUTIONAL FLAVOR - Advanced Permissions -->
    <!-- For Defense, Enterprise, Government use cases -->
    
    <!-- Call log access - ENABLED for institutional builds -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    
    <!-- SMS reading - for advanced phishing detection -->
    <uses-permission android:name="android.permission.READ_SMS" />
    
    <!-- Call recording - for compliance and security -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Answer/end calls - for smart call handling -->
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    
    <!-- Network statistics - for anomaly detection -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    
    <!-- Query installed apps - for security scanning -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

</manifest>
