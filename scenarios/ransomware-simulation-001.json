  "steps": [
    {
      "stepNumber": 1,
      "description": "Authenticate using compromised local administrator credentials",
      "techniqueId": "T1078.003",
      "action": {
        "type": "access",
        "parameters": {
          "account": "local_admin",
          "method": "rdp",
          "source": "external-ip"
        },
        "logicalOutcome": "Successful authentication, RDP session established"
      },
      "expectedResult": "Initial access to target system",
      "timingOffset": 0,
      "simulated": true
    },
    {
      "stepNumber": 2,
      "description": "Inject malicious DLL into legitimate system process for privilege escalation",
      "techniqueId": "T1055.001",
      "action": {
        "type": "execution",
        "parameters": {
          "targetProcess": "svchost.exe",
          "dll": "malicious_library.dll",
          "method": "reflective-loading"
        },
        "logicalOutcome": "DLL injected, running with SYSTEM privileges"
      },
      "expectedResult": "Elevated privileges obtained",
      "timingOffset": 2,
      "simulated": true
    },
    {
      "stepNumber": 3,
      "description": "Clear Windows Event Logs to evade detection",
      "techniqueId": "T1070.001",
      "action": {
        "type": "persistence",
        "parameters": {
          "logs": ["Security", "System", "Application"],
          "method": "wevtutil-clear"
        },
        "logicalOutcome": "Event logs cleared, forensic trail removed"
      },
      "expectedResult": "Defense evasion successful",
      "timingOffset": 4,
      "simulated": true
    },
    {
      "stepNumber": 4,
      "description": "Enumerate file shares and identify high-value targets for encryption",
      "techniqueId": "T1083",
      "action": {
        "type": "scan",
        "parameters": {
          "scope": "network-shares",
          "filter": "*.docx,*.xlsx,*.pdf,*.db,*.bak",
          "depth": "recursive"
        },
        "logicalOutcome": "Discovered 2,345 high-value files across 15 network shares"
      },
      "expectedResult": "Target data identified",
      "timingOffset": 6,
      "simulated": true
    },
    {
      "stepNumber": 5,
      "description": "Delete volume shadow copies to prevent recovery",
      "techniqueId": "T1490",
      "action": {
        "type": "impact",
        "parameters": {
          "command": "vssadmin delete shadows /all /quiet",
          "target": "all-volumes"
        },
        "logicalOutcome": "All shadow copies deleted, recovery disabled"
      },
      "expectedResult": "System recovery inhibited",
      "timingOffset": 8,
      "simulated": true
    },
    {
      "stepNumber": 6,
      "description": "Encrypt files with strong cryptography and drop ransom note",
      "techniqueId": "T1486",
      "action": {
        "type": "impact",
        "parameters": {
          "algorithm": "AES-256",
          "targets": "high-value-files",
          "extension": ".encrypted",
          "ransom-note": "README_DECRYPT.txt"
        },
        "logicalOutcome": "2,345 files encrypted, ransom note deployed to all directories"
      },
      "expectedResult": "Data encrypted for ransom",
      "timingOffset": 10,
      "simulated": true
    }
  ],
